@article{chenEarlyNorthwardMigration2019,
  title = {The {{Early Northward Migration}} of the {{White-Backed Planthopper}} ({{Sogatella}} Furcifera) Is {{Often Hindered}} by {{Heavy Precipitation}} in {{Southern China}} during the {{Preflood Season}} in {{May}} and {{June}}},
  author = {Chen, Hui and Chang, Xiao-Li and Wang, Yun-Ping and Lu, Ming-Hong and Liu, Wan-Cai and Zhai, Bao-Ping and Hu, Gao},
  year = {2019},
  month = jun,
  journal = {Insects},
  volume = {10},
  number = {6},
  pages = {158},
  publisher = {Multidisciplinary Digital Publishing Institute},
  issn = {2075-4450},
  doi = {10.3390/insects10060158},
