@article{navarro-canoFacilitationEnhancesEcosystem2021,
  title = {Facilitation Enhances Ecosystem Function with Non-Random Species Gains},
  author = {{Navarro-Cano}, Jose A. and Goberna, Marta and Verd{\'u}, Miguel},
