@article{liuLatitudinalVariationBody2018,
  title = {Latitudinal Variation in Body Size in {{Fejervarya}} Limnocharis Supports the Inverse of {{Bergmann}}'s Rule},
  author = {Liu, Qiao and Feng, Hao and Jin, Long and Mi, Zhi Ping and Zhou, Zhao Min and Liao, Wen Bo},
  year = {2018},
  month = jan,
  publisher = {Brill},
  doi = {10.1163/15707563-17000129},
  urldate = {2024-07-31},
  abstract = {Abstract Bergmann's rule states that within a species of endotherms smaller individuals are found in warmer conditions, which is consistent for nearly all endotherms, while in ectotherms body size patterns are less consistent. As ectothermic vertebrates, the morphology of amphibians is likely impacted by climatic conditions. Here, we examined latitudinal variation in body size in the ranid frog, Fejervarya limnocharis, based on literature and our own data on mean body size of 3637 individuals from 50 populations and average age of 2873 individuals from 40 populations in China. The results showed that body size was positively correlated with environmental temperature, but not with precipitation. Body size was negatively correlated with latitude among populations in this species, which supported the inverse of Bergmann's rule. Our findings suggest that a larger body size in low-latitude populations is associated with a longer growing season related to the higher environmental temperature.},
  langid = {english},
  keywords = {Bergmann's rule,ectotherms,Fejervarya limnocharis,latitudinal variation,phenotypic traits,skeletochronology},
  file = {C:\Users\cgao20\Zotero\storage\SK5DHPSF\Liu et al. - 2018 - Latitudinal variation in body size in Fejervarya l.pdf}
}

