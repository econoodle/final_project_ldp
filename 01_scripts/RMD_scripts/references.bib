  title = {Positive Interactions among Alpine Plants Increase with Stress},
  author = {Callaway, Ragan M. and Brooker, R. W. and Choler, Philippe and Kikvidze, Zaal and Lortie, Christopher J. and Michalet, Richard and Paolini, Leonardo and Pugnaire, Francisco I. and Newingham, Beth and Aschehoug, Erik T. and Armas, Cristina and Kikodze, David and Cook, Bradley J.},
  year = {2002},
