@article{caponRiparianEcosystems21st2013,
  title = {Riparian {{Ecosystems}} in the 21st {{Century}}: {{Hotspots}} for {{Climate Change Adaptation}}?},
  shorttitle = {Riparian {{Ecosystems}} in the 21st {{Century}}},
  author = {Capon, Samantha J. and Chambers, Lynda E. and Mac Nally, Ralph and Naiman, Robert J. and Davies, Peter and Marshall, Nadine and Pittock, Jamie and Reid, Michael and Capon, Timothy and Douglas, Michael and Catford, Jane and Baldwin, Darren S. and Stewardson, Michael and Roberts, Jane and Parsons, Meg and Williams, Stephen E.},
  year = {2013},
