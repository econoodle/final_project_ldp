@article{ashtonBERGMANNsRULENONAVIAN2003,
  title = {{{BERGMANN}}'s {{RULE IN NONAVIAN REPTILES}}: {{TURTLES FOLLOW IT}}, {{LIZARDS AND SNAKES REVERSE IT}}},
