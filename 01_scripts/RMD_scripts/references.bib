  shorttitle = {Shifting States, Shifting Services},
  author = {Janssen, Annette B. G. and Hilt, Sabine and Kosten, Sarian and {de Klein}, Jeroen J. M. and Paerl, Hans W. and {Van de Waal}, Dedmer B.},
