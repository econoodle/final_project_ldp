@article{sillimanWholeCommunityFacilitationRegulates2011,
  title = {Whole-{{Community Facilitation Regulates Biodiversity}} on {{Patagonian Rocky Shores}}},
  author = {Silliman, Brian R. and Bertness, Mark D. and Altieri, Andrew H. and Griffin, John N. and Bazterrica, M. Cielo and Hidalgo, Fernando J. and Crain, Caitlin M. and Reyna, Maria V.},
  year = {2011},
